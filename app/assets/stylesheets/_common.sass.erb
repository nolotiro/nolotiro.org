/**
 * Main Grid.

.container
  padding: 0

#main
  width: 100%

  @media only screen and (max-width: $container-sm)
    padding: 0 2%

  @media only screen and (min-width: $container-sm + 1)
    padding: 0

.announcement
  width: 100%
  background-color: $light-yellow
  border-bottom: solid 1px $gray-separator
  display: relative
  padding: 10px 50px
  text-align: center

  .dismiss
    font-size: 24px
    line-height: 12px
    position: absolute
    top: 10px
    right: 10px

a
  &:link
    color: $link
    text-decoration: none

  &:visited
    color: $link

  &:active
    color: #00C7EF

  &:hover
    color: #26DAFF

  &.actual
    border-bottom: solid
    border-width: 3px

#rememberme-element
  display: inline

.user_login_box
  position: relative
  font-size: 1em
  background-color: #FFFFCC
  border: 1px solid $gray-separator
  border-top: none
  float: right
  line-height: 24px
  right: 100px
  z-index: 200

  a
    > span
      border-right: 1px solid $gray-separator
      display: block
      float: left
      padding: 0 10px

    &:last-child > span
      border-right: none

    /* I can't find a better way to vertically-center the envelope... */
    img
      margin-bottom: 4px

$langs: <%= I18n.available_locales.join(" ") %>

#select_language_box
  position: absolute
  top: 0
  float: right
  right: 0
  border: 1px solid white
  display: inline-block
  height: 24px
  overflow: hidden
  vertical-align: top
  width: 92px
  padding-top: 24px
  z-index: 400

  &:hover
    border: 1px solid $gray-separator
    background-color: #fff
    height: auto

    .lang
      display: block

  .lang
    padding-left: 4px
    padding-right: 0
    line-height: 24px
    height: 24px
    display: none
    width: 100%
    text-decoration: none !important

    &:hover
      background-color: #999 !important
      text-decoration: none !important
      color: #fff !important

  img
    text-decoration: none !important
    border: 0
    right: 2px
    clear: left
    vertical-align: baseline

  .lang-active
    display: block
    position: absolute
    top: 0

  @each $l in $langs
    .flag-#{$l}
      vertical-align: center
      background-repeat: no-repeat
      background-position: 0 7px, center
      background-image: image-url("flags/#{$l}.gif")

      span
        margin-left: 15px

form.searchbox
  display: inline-block
  width: auto
  padding-right: 20px
  top: 0

  input
    padding: 1px
    font-size: 12px
    border: 1px
    border-style: solid
    border-color: $gray-separator

.user_profile h4
  font-size: 14px
  padding: 5px

.ad_create_tab
  @include clearfix

.ad_change_location_home
  @include clearfix

  text-align: right
  font-weight: bold !important
  margin-bottom: 5px

.ad_create_tab a
  background: #97dc3c
  background: -moz-linear-gradient(top, #73C017 31%, #67B213 67%, #51990C 87%)
  background: -webkit-gradient(linear, left top, left bottom, color-stop(31%,#73C017), color-stop(67%,#67B213), color-stop(87%,#51990C))
  background: -webkit-linear-gradient(top, #73C017 31%,#67B213 67%,#51990C 87%)
  background: -o-linear-gradient(top, #73C017 31%,#67B213 67%,#51990C 87%)
  background: -ms-linear-gradient(top, #73C017 31%,#67B213 67%,#51990C 87%)
  background: linear-gradient(to bottom, #73C017 31%,#67B213 67%,#51990C 87%)
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#73C017', endColorstr='#51990C',GradientType=0 )
  overflow: hidden
  color: #fff
  font-size: 1.2em
  font-weight: bold
  border: 1px solid $gray-separator
  padding-left: 10px
  padding-right: 10px
  padding-top: 5px
  padding-bottom: 5px
  text-align: center
  width: auto
  display: block

@media only screen and (min-width: $container-sm + 1)
  $action-height: 48px

  .ad_actions li
    height: $action-height
    line-height: $action-height

    &:first-child
      a
        padding-left: 0

    &:last-child
      a
        border-right: none
        padding-right: 0

    a
      border-right: 1px solid $gray-separator
      font-size: 10px
      line-height: $action-height / 2
      margin: $action-height / 4 0
      padding: 0 10px

@media only screen and (max-width: $container-sm + 1)
  $action-height: 72px

  .ad_actions
    height: $action-height
    padding: $action-height / 6 0

    li
      height: $action-height / 3
      line-height: $action-height / 3
      width: 50%

    a
      font-size: 9px

.ad_actions
  display: block
  list-style-type: none
  width: 100%

  li
    float: left

    a
      display: block
      width: 100%

.ad_status
  clear: left
  display: inline-block
  color: #fff
  padding: 3px
  font-weight: bold
  font-size: 11px
  border: 0
  margin-right: 4px

.available
  background-color: #19AF13

.booked
  background-color: #DF7401

.delivered
  background-color: red

.ad_list_image
  z-index: 300
  float: right
  padding-left: 4px
  width: 100px

  a img
    float: right

.no_results
  margin-top: 10px

  h2
    margin-bottom: 1.6em

.filter_status
  padding: 10px 18px 12px 0

/**
 * Ads

.profile-info
  font-size: 1.3em
  font-weight: bold
  margin-bottom: 6px

.ad_date
  color: #666
  font-size: 0.9em
  font-weight: normal
  padding-bottom: 5px

.edit-section, .destroy-section
  @include make-row

.edit-section
  margin-bottom: 30px

.delete_message
  display: inline-block
  float: right
  padding: 5px
  border: 1px solid $gray-separator
  background-color: #fff

.message-excerpt
  margin-bottom: 20px

.message-container
  font-size: 0.9em
  position: relative

  p
    &:last-child
      margin-bottom: 0

%triangle
  height: 10px
  position: absolute
  top: 40px
  width: 12px

.triangle-me
  @extend %triangle

  background: image-url("pico-green-right.png") no-repeat 0 0
  right: -11px

.triangle-other
  @extend %triangle

  background: image-url("pico-white-left.png") no-repeat 0 0
  left: -11px

.bg-bubble-me
  background: #CCF8A7

.bubble
  min-height: 72px
  border: 1px solid #CCC
  border-radius: 3px
  padding: 10px 10px 30px 10px

.bubble-reply
  border: 1px solid #CCC
  border-radius: 3px
  padding: 10px

.message-date
  position: absolute
  bottom: 10px
  right: 10px
  color: #666
  font-size: 0.9em
  font-weight: normal
  float: right
  text-align: right

.ad_meta_info
  @include clearfix

  position: relative
  display: block
  padding: 3px
  clear: left
  text-align: left
  font-size: 11px

  b
    margin-right: 10px

.ad_contact
  margin: 15px 0

.body-wrapper p
  margin-bottom: 5px

  &:last-child
    margin-bottom: 0

.rss
  margin: 15px 0

.sharelinks
  clear: both
  font-size: .7em
  margin-bottom: 15px

  #social-buttons
    float: left

.ad_comments
  clear: both
  display: block
  padding-top: 15px

.comment
  border-top: 1px dashed $gray-separator
  clear: both
  font-size: 1em
  width: 100% !important
  padding: 18px 0

  span
    display: block
    padding: 5px

.comment_form
  @extend .comment

  border-bottom: 0

.comments h5
  float: left
  font-size: 1.2em
  font-weight: bold
  padding-top: 10px
  margin-bottom: 10px !important

.location_name
  display: inline-block
  margin-bottom: 14px

/**
 * Flash & error messages

.flash-msg
  width: 100%

.errors, #error_explanation
  color: red

#error, .error, .alert, .notice, .success, #error_explanation
  padding: .8em
  margin-bottom: 1em
  margin-top: 1em
  border: 1px solid $gray-separator

#error, .error, #error_explanation, .alert
  background: #FBE3E4
  color: #8a1f11
  border-color: #FBC2C4

  a
    color: #8a1f11

.notice
  background: #FFF6BF
  color: #514721
  border-color: #FFD324

  a
    color: #514721

.success
  background: #FFF
  color: #264409
  border-color: #C6D880

  a
    color: #264409

/**
 * Messages

.mail-list
  tr:last-child
    border-bottom: 1px solid $gray-separator

  .unread
    td
      font-weight: bold

/**
 * Listings

.ranking
  margin-top: 15px

  h2
    margin-bottom: 5px
    font-size: 1.3em

/**
 * Home

.ad_excerpt_list
  color: $text
  padding: 10px 0
  width: 100%
  border-bottom: 1px solid $gray-separator

  &:first-child
    border-top: 1px solid $gray-separator

// This should be named `ad_content` but AdBlock doesn't like that.
// @todo: Rename `Ad` to `Present` and `Petition` so we don't get
// bitten by this again
.aod_content
  clear: left
  display: block

  > div, h4
    color: $text
    font-weight: normal
    margin-bottom: 8px

  h4
    color: $link
    font-size: 1.4em
    font-weight: bold

  > .ad_excerpt_woeid
    color: gray
    font-size: 1em
    font-weight: bold

/**
 * Layout.

#header
  @include make-row

  margin: 0
  position: relative
  text-align: left

#footer
  font-size: 1em
  line-height: 1.33em
  float: left
  margin-top: 20px
  padding: 20px
  clear: both
  border-top: 1px solid $gray-separator
  background-color: #F2F2F2

  .innerWrap
    clear: both

#facebook-button
  float: left
  width: 85px
  height: 30px
  padding-right: 5px

#twitter-button
  float: left
  width: 85px
  height: 30px
  padding-right: 5px

.links-right
  display: inline-block
  float: right
  text-align: right
  margin-bottom: 10px
  position: relative
  width: 70%

.links-left
  display: inline-block
  float: left
  text-align: left
  position: relative

/**
 * Header Area.

.actions-row
  margin: 40px auto 0
  width: 96%
  overflow: auto

@media only screen and (max-width: $container-sm)
  .site-logo
    width: 100%

  .page-actions
    margin: 20px auto 0
    width: 80%

    .ad_create_tab
      width: 100%

@media only screen and (min-width: $container-sm + 1)
  .site-logo
    width: 50%
    float: left

  .page-actions
    width: 50%
    float: right

    .ad_create_tab
      width: 80%
      float: right

    .ad_change_location_home
      height: 17px

.site-logo
  @include clearfix

  background: image-url('nolotiro_logo.png') no-repeat 0 0

  a
    display: block
    padding-left: 60px
    height: 48px

.site-name
  z-index: -130
  border: none
  font-size: 2em
  line-height: 1
  margin-bottom: 0.01em
  font-family: Georgia, "Times New Roman", Times, serif

.site-slogan
  float: left
  font-size: 1em
  padding-top: 1px
  color: black
  text-decoration: none

.location_header_section
  z-index: 100
  display: block
  background-color: $blue-searchbox
  padding-top: 15px
  padding-bottom: 6px
  padding-left: 20px
  border: 1px solid $gray-separator
  border-bottom: none
  min-height: 75px

.panel-default
  .static-page-panel-heading
    @extend .panel-heading

    background-color: $blue-searchbox

.world_link
  display: inline-block
  font-weight: bold
  margin-top: 8px

.default_header_section
  background-color: $blue-searchbox
  border: 1px solid $gray-separator
  padding: 15px

  h2
    font-size: 1em
    font-weight: bold
    margin-bottom: 1.5em
    padding-left: 0

.default_content_section
  border: 1px solid $gray-separator
  border-top: none
  padding: 15px

/**
 * Pagination

.pagination
  clear: both
  font-weight: bold
  margin-bottom: 30px
  padding-top: 10px
  text-align: center
  font-size: 1.2em
  display: block
  width: auto
  border: 0
  list-style: none
  margin-right: 2px

  span
    border: solid 1px $link
    margin-right: 2px
    text-align: center
    padding: 4px

  a
    text-decoration: none

  #current
    background-color: $link
    display: inline-block
    color: #fff
    text-align: center

#next
  width: 85px
  display: inline-block

#prev
  display: inline-block
  margin-right: 0

#norm
  display: inline-block
  text-align: center

.disabled
  border-color: #fff !important
  color: #666

/**
 * Footer

.page_footer
  position: absolute
  bottom: 20px
  width: 99%
  text-align: center
  clear: both
  font-size: 9pt
  color: #999

/**
 * Tabs

.nlt-tabs
  @extend .nav-tabs

  border-bottom: none

  li
    margin-right: 2px

    a
      border-color: $gray-separator $gray-separator transparent
      color: $navbar-default-link-active-color

/**
 * Misc

#cookie-bar
  z-index: 99999

#body
  width: 100%
  height: 100px

#social-buttons
  float: left
  width: 30%

.btn.login-with-facebook
  background-color: #3b5998
  color: white
  display: block
  font-weight: bold
  border-color: #3B5998
  margin-top: 30px

.btn.login-with-google
  background-color: #d62d20
  border-color: #d62d20
  color: white
  display: block
  font-weight: bold
  margin-top: 10px

@media only screen and (max-width: $container-sm)
  .site-name
    width: 50%

  .user_login_box
    float: left !important
    right: 0 !important

  .default_header_section br
    display: none

  #facebook-button
    padding: 0
    margin: 0

  #twitter-button
    padding: 0

  #contact_message
    width: 95%

  .desktop
    display: none !important

  #header
    margin-bottom: 5%

  .info
    width: 90%
    margin-left: 4%
    clear: both

@media only screen and (min-width: $container-sm + 1)
  .mobile
    display: none !important
